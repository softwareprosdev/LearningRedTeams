# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
NODE_ENV=development

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/zeroday_institute?schema=public"

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# JWT SECRETS (CHANGE THESE IN PRODUCTION!)
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-change-in-production-abc123
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-change-in-production-xyz789
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=30d

# ============================================================================
# STRIPE PAYMENT CONFIGURATION
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================================================
# MINIO / S3 STORAGE CONFIGURATION
# ============================================================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_VIDEOS=videos
MINIO_BUCKET_UPLOADS=uploads
MINIO_USE_SSL=false

# ============================================================================
# APPLICATION URLS
# ============================================================================
API_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1

# ============================================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@zerodayinstitute.com

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_NETWORK=zdi-labs

# ============================================================================
# SECURITY & RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# ============================================================================
# API CONFIGURATION
# ============================================================================
PORT=4000
API_PREFIX=api/v1
