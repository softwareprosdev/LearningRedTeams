{
  "name": "zeroday-institute",
  "version": "1.0.0",
  "private": true,
  "description": "ZeroDayInstitute.com - Full-stack cybersecurity learning platform",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter frontend dev\" --names \"api,frontend\" --prefix-colors \"blue,magenta\"",
    "dev:api": "pnpm --filter api dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:generate": "pnpm --filter @zdi/database db:generate",
    "db:push": "pnpm --filter @zdi/database db:push",
    "db:migrate": "pnpm --filter @zdi/database db:migrate",
    "db:studio": "pnpm --filter @zdi/database db:studio",
    "db:seed": "pnpm --filter @zdi/database db:seed"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "turbo": "^1.12.4",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "concurrently": "^9.1.0"
  },
  "workspaces": [
    "apps/*",
    "apps/workers/*",
    "packages/*"
  ]
}
