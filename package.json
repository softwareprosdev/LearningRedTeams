{
  "name": "zeroday-institute",
  "version": "1.0.0",
  "private": true,
  "description": "ZeroDayInstitute.com - Full-stack cybersecurity learning platform",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter frontend dev\" --names \"api,frontend\" --prefix-colors \"blue,magenta\"",
    "dev:api": "pnpm --filter api dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:generate": "pnpm --filter @zdi/database db:generate",
    "db:push": "pnpm --filter @zdi/database db:push",
    "db:migrate": "pnpm --filter @zdi/database db:migrate",
    "db:studio": "pnpm --filter @zdi/database db:studio",
    "db:seed": "pnpm --filter @zdi/database db:seed",
    "seed:courses": "node --experimental-strip-types --no-warnings scripts/seed-realworld-courses.ts",
    "seed:content": "node --experimental-strip-types --no-warnings scripts/seed-course-content.ts",
    "scan": "ts-node scripts/scan-codebase.ts"
  },
  "devDependencies": {
    "@prisma/client": "^5.9.1",
    "@turbo/gen": "^1.12.4",
    "@types/bcrypt": "^6.0.0",
    "@types/minimatch": "^5.1.2",
    "bcrypt": "^6.0.0",
    "concurrently": "^9.1.0",
    "glob": "^13.0.0",
    "js-yaml": "^4.1.1",
    "prettier": "^3.2.5",
    "tmp": "^0.2.5",
    "ts-node": "^10.9.2",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "apps/*",
    "apps/workers/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "glob": ">=10.5.0",
      "js-yaml": ">=4.1.1",
      "tmp": ">=0.2.4"
    }
  }
}
